<div class="container mt-4 mb-5">
    <div class="card mb-5">
        <div class="card-header">
            <h3>Edit car</h3>
        </div>
        <div class="card-body">
            {{#if data}}
            <form action="/edit/{{data.id}}" method="post">
                <div class="mb-3">
                    <label for="model" class="form-label">Model</label>
                    <input type="text" class="form-control" id="model" name="model" value="{{data.model}}">
                </div>
                <div class="mb-3">
                    <label for="carName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="carName" name="carName" value="{{data.carName}}">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            {{/if}}
        </div>
    </div>
</div>
